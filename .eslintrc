{
  "extends": ["wesbos"],
  "parser": "babel-eslint",
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-props-no-spreading": "off",
    "no-unused-expressions": "off",
    "no-nested-ternary": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 3,
        "semi": false
      }
    ],
    "react/prop-types": 0
  }
}
